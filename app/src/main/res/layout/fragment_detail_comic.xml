<!-- activity_detail_comic.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_detail_cover"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />



        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_detail_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_detail_years"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="3"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_detail_show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem thêm"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_detail_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu gọn"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_read_comic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc Truyện"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bình luận: "
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/ed_comment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="14dp"
            android:hint="enter your comment...."/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_comment"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:text="Comment"
                android:textSize="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerView_Comment"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>
    </LinearLayout>

</ScrollView>